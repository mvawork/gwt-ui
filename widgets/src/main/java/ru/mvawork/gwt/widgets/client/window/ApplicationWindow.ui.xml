<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="style" type="ru.mvawork.gwt.widgets.client.window.ApplicationWindow.WindowStyle" />


    <g:FlowPanel styleName="{style.windowPanel}" ui:field="windowPanel">
        <g:FlowPanel styleName="{style.headerPanel}" ui:field="headerPanel" >
            <g:FlowPanel ui:field="titlePanel" styleName="{style.titlePanel}">
                <g:Label ui:field="titleLabel"> </g:Label>
            </g:FlowPanel>
            <g:FlowPanel styleName="{style.actionHeaderPanel}" ui:field="actionHeaderPanel">
            </g:FlowPanel>
        </g:FlowPanel>
        <g:SimplePanel styleName="{style.contentPanel}" ui:field="contentPanel"/>
    </g:FlowPanel>

</ui:UiBinder>